@model Scheduler.Models.UpdateInformationViewModel
@{
    ViewBag.Title = "Change Password";
}
<div id="page-default" class="clearfix">
    <div id="primary">
        <div id="content" role="main">
            <div class="page-content">
                <article id="post-20" class="post-20 page type-page status-publish hentry">
                    <div class="entry-content">
                        <div class="row vc_row-fluid vc_custom_1432886500341" style="padding-left: 0px; padding-right: 0px">
                            <div class="cms-bg-overlay" style=""></div>
                            <div class="vc_col-sm-12 wpb_column vc_column_container ">
                                <div class="wpb_wrapper" style="padding-bottom: 30px">
                                    <div class="vc_custom_heading vc_custom_1433301510670 default">
                                        <div class="vc_custom_heading-wrap  row ">
                                            <div class="table-responsive">
                                                <div class="table">
                                                    <div class="table-cell">
                                                        <h2>Update Your Account Information</h2>
                                                    </div>
                                                    <div class="table-cell">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="custom-heading-driver default"></div>
                                    </div>
                                    <div>
                                        @using (Html.BeginForm("UpdateInformation", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.HiddenFor(model => model.ProfilePic)
                                            <h4>Update Information Form</h4>
                                            <hr />
                                            @Html.ValidationSummary("", new { @class = "text-danger" })
                                            <div class="form-group">
                                                @Html.LabelFor(m => m.FirstName, new { @class = "col-md-4 control-label" })
                                                <div class="col-md-5">
                                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control capitalize" })
                                                </div>
                                            </div><br />
                                            <div class="form-group">
                                                @Html.LabelFor(m => m.LastName, new { @class = "col-md-4 control-label" })
                                                <div class="col-md-5">
                                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control capitalize" })
                                                </div>
                                            </div><br />
                                            <div class="form-group">
                                                @Html.LabelFor(m => m.Company, new { @class = "col-md-4 control-label" })
                                                <div class="col-md-5">
                                                    @Html.TextBoxFor(m => m.Company, new { @class = "form-control capitalize" })
                                                </div>
                                            </div><br />
                                            <div class="form-group">
                                                @Html.LabelFor(m => m.JobTitle, new { @class = "col-md-4 control-label" })
                                                <div class="col-md-5">
                                                    @Html.TextBoxFor(m => m.JobTitle, new { @class = "form-control capitalize" })
                                                </div>
                                            </div><br />
                                            <div class="form-group">
                                                @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-4 control-label" })
                                                <div class="col-md-5">
                                                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control onlyNum phone", maxlength = "14", minlength = "14" })
                                                </div>
                                            </div><br />
                                            <div class="form-group">
                                                <div class="col-md-4 control-label">Profile Picture</div>
                                                <div class="col-md-5">
                                                    <input name="image" type="file" id="fileUploadThree" />
                                                    <div id="fileDisplay" style="max-width: 180px; padding-top: 10px">
                                                        @if (Model.ProfilePic != null)
                                                        {
                                                            <img src="@Model.ProfilePic" alt="Profile Picture" style="border: 3px solid #29AAE3; margin-top: 15px; max-width: 180px; background-color: white" />
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group" style="margin-top: 20px">
                                                <div class="col-md-offset-4 col-md-8">
                                                    <input type="submit" value="Update Information" class="btn btn-default" style="margin-right: 10px" />
                                                    <a href="javascript:history.go(-1)" class="btn btn-default">Cancel</a>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#profile-tab').addClass("current-menu-item");
        });
    </script>
    <script>
            var fileInput = document.getElementById('fileUploadThree');
            var fileDisplayArea = document.getElementById('fileDisplay');

            //File Reader Function for displaying images
            fileInput.addEventListener('change', function (e) {
                var file = fileInput.files[0];
                var imageType = /image.*/;

                if (file.type.match(imageType)) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        fileDisplayArea.innerHTML = "";

                        // Create a new image.
                        var img = new Image();
                        // Set the img src property using the data URL.
                        img.src = reader.result;
                        // Add the image to the page.
                        fileDisplayArea.appendChild(img);
                    }
                    reader.readAsDataURL(file);
                }
                else {
                    fileDisplayArea.innerHTML = "File not supported!";
                }
            });
    </script>
}